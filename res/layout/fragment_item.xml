<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#E5E5E5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.phoneit.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_card_background"
        android:descendantFocusability="afterDescendants"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/type_image_details"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/note_40" />

        <TextView
            android:id="@+id/device_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/type_image_details"
            android:text="To Galaxy Nexus"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_textview_details"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/type_image_details"
            android:text="23 June"
            android:textColor="#888888"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_card_background"
        android:descendantFocusability="afterDescendants"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/title_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/note_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_textview_details"
            android:layout_marginTop="5dp"
            android:autoLink="all"
            android:linksClickable="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/filename_textview_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_textview_details"
            android:layout_marginTop="5dp"
            android:text="Filename"
            android:textColor="@color/link_blue"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/preview_image_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/note_textview_details"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/test_picture"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/share_image_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_share_gray" />
    </RelativeLayout>

</LinearLayout>